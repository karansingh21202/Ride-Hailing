<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Ride Hailing App</display-name>
    <description>MVP Ride Hailing Application</description>

    <!-- ========== FILTERS ========== -->
    
    <!-- CORS Filter -->
    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>com.ridehailing.filter.CORSFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/api/*</url-pattern>
    </filter-mapping>

    <!-- Auth Filter (JWT Validation) -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.ridehailing.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/rides/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/payments/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/ratings/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/api/vehicles/*</url-pattern>
    </filter-mapping>

    <!-- ========== AUTH SERVLETS (Member 2) ========== -->
    
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.ridehailing.servlet.auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/api/auth/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ridehailing.servlet.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/api/auth/login</url-pattern>
    </servlet-mapping>

    <!-- ========== VEHICLE SERVLETS (Member 1) ========== -->
    
    <servlet>
        <servlet-name>VehicleServlet</servlet-name>
        <servlet-class>com.ridehailing.servlet.vehicle.VehicleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VehicleServlet</servlet-name>
        <url-pattern>/api/vehicles</url-pattern>
    </servlet-mapping>

    <!-- ========== RIDE SERVLETS (Member 3) ========== -->
    
    <servlet>
        <servlet-name>RideRequestServlet</servlet-name>
        <servlet-class>com.ridehailing.servlet.ride.RideRequestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RideRequestServlet</servlet-name>
        <url-pattern>/api/rides/request</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RideListServlet</servlet-name>
        <servlet-class>com.ridehailing.servlet.ride.RideListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RideListServlet</servlet-name>
        <url-pattern>/api/rides/requests</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RideActionServlet</servlet-name>
        <servlet-class>com.ridehailing.servlet.ride.RideActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RideActionServlet</servlet-name>
        <url-pattern>/api/rides/*</url-pattern>
    </servlet-mapping>

    <!-- ========== PAYMENT SERVLETS (Member 4) ========== -->
    
    <servlet>
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.ridehailing.servlet.payment.PaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/api/payments</url-pattern>
    </servlet-mapping>

    <!-- ========== RATING SERVLETS (Member 4) ========== -->
    
    <servlet>
        <servlet-name>RatingServlet</servlet-name>
        <servlet-class>com.ridehailing.servlet.rating.RatingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RatingServlet</servlet-name>
        <url-pattern>/api/ratings</url-pattern>
    </servlet-mapping>

    <!-- ========== ERROR PAGES ========== -->
    
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.html</location>
    </error-page>

    <!-- ========== SESSION CONFIG ========== -->
    
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- ========== WELCOME FILE ========== -->
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
